@model IEnumerable<selida.Models.Domain.BlogPost>

<!-- Your HTML content here -->

<table>
    <thead>
        <tr>
            <th>Heading</th>
            <th>Page Title</th>
            <th>Publish Date</th>
            <!-- Add more columns as needed -->
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td><a href="@Url.Action("Details", "Posts", new { id = post.Id })">@post.Heading</a></td>
                <td>@post.PageTitle</td>
                <td>@post.PublishDate.ToString("yyyy-MM-dd")</td>
            </tr>
        }
    </tbody>
</table>